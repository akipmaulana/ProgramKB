<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/my_time_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#FFCC00"
            android:dividerHeight="@dimen/divider_list"
            android:drawSelectorOnTop="false"
            android:scrollbarThumbVertical="@drawable/scroll_style" />
    </FrameLayout>

    <TextView
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50000000"
        android:gravity="center"
        android:padding="@dimen/radius_scroll"
        android:text="@string/no_connect"
        android:textColor="#fff"
        android:textSize="18sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/kosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/kosong"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"
        tools:targetApi="11" 
        android:visibility="invisible"/>

</RelativeLayout>