<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_map_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/radius_scroll"
        android:background="@drawable/ic_action_camera"
        android:contentDescription="@string/klasifikasi" />

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textColor="#FFF"
        android:text="@string/klasifikasi"
        android:textSize="24sp" />

    <android.support.v7.widget.SearchView
        android:id="@+id/search_klasifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="bottom"
        tools:targetApi="11" >
    </android.support.v7.widget.SearchView>

</LinearLayout>