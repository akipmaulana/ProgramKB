<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mylist_timeline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/child2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageku"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:background="@drawable/actionbar"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/child2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/child2_2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/width_scroll"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/namaku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/klasifikasi"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/child2_2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/deskripsiku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/klasifikasi"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/child2_2_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/rataku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/width_scroll"
                android:text="@string/klasifikasi"
                android:textSize="12sp" />
            
            <TextView
                android:id="@+id/viewku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/klasifikasi"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>